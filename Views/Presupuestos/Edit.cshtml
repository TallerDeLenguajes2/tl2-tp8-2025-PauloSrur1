@model tl2_tp8_2025_PauloSrur1.ViewModels.PresupuestoViewModel
@{
    ViewData["Title"] = "Editar presupuesto";
}

<h1 class="mb-3">Editar presupuesto</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdPresupuesto" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="NombreDestinatario" class="form-label"></label>
        <input asp-for="NombreDestinatario" class="form-control" />
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FechaCreacion" class="form-label"></label>
        <input asp-for="FechaCreacion" class="form-control" type="date" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
