@model IEnumerable<Models.Producto>
@{
    ViewData["Title"] = "Productos";
}

<h1 class="mb-3">Productos</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay productos cargados.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripci√≥n</th>
                <th class="text-end">Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdProducto</td>
                <td>@p.Descripcion</td>
                <td class="text-end">@p.Precio</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.IdProducto">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.IdProducto">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<a class="btn btn-primary" asp-action="Create">Nuevo producto</a>

