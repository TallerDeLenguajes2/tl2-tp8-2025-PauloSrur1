@model tl2_tp8_2025_PauloSrur1.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Editar producto";
}

<h1 class="mb-3">Editar producto</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdProducto" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" type="number" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
